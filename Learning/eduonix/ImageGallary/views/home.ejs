<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload Image</title>
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <div class="form-container">
        <h1>Upload Images</h1>
        <form action="/uploadSingle" method="POST" enctype="multipart/form-data">
            <h2>Single Upload</h2>
            <input type="file" name="singleFile" placeholder="choose image">
            <button type="submit">Upload Image</button>
        </form>
        <form action="/uploadMultiple" method="POST" enctype="multipart/form-data">
            <h2>Multiple Upload</h2>
            <input type="file" name="multiFile" placeholder="choose images" multiple>
            <button type="submit">Upload Multiple Images</button>
        </form>
    </div>
    <h1>All images</h1>
    <div class="img-container">

        <% imgs.forEach(img=>{ %>
            <div class="img-card">
                <img src="<%= img.imgUrl %>" alt="image">
                <form action="/delete/<%= img.id %>?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit">Delete</button>
                </form>
            </div>
        <% }) %>

    </div>

</body>

</html>